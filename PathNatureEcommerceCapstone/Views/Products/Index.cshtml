@model IEnumerable<PathNatureEcommerceCapstone.Models.DatabaseCapstone.Products>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}


<div class="row d-flex flex-sm-column align-content-lg-center justify-content-center">
    <div class="col-lg-12 col-md-6 col-sm-6">
        <h1 class="d-flex d-lg-inline-flex display-5 mt-4">Create New Product</h1>
        <!-- BREADCRUMBS-->
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Dashboard", "LayoutPageAdminControllerController")">
                    Dashboard
                </a>
            </li>
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Products")">
                    Products
                </a>
            </li>
            <li class="breadcrumb-item active"> Create new Product</li>
        </ol>
    </div>

    <p>
        @Html.ActionLink("Create Products", "Create")
    </p>
    <div class="col-lg-12 col-md-6 col-sm-6">
        <div class="card mb-4">


            <div class="card-header">
                <i class="fas fa-table me-1"></i>
                Categories
                <a href="@Url.Action("Create", "Products")" class="btn btn-sm btn-outline-info float-end">
                    <i class="fas fa-plus"></i> Add New
                </a>
            </div>

            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="datatablesSimple">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.ProductName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CreatedDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Quantity)
                                </th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.ProductName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CreatedDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Quantity)
                                </th>
                                <th>Action</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ProductName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CreatedDate)
                                    </td>
                                    <th>
                                        @Html.DisplayFor(modelItem => item.Quantity)
                                    </th>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.ProductID }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.ProductID }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.ProductID })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>