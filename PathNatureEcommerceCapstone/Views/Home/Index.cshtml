@model PathNatureEcommerceCapstone.Models.ViewModel.CombinedViewModel


@{
    ViewBag.Title = "Home Page";
}

<style>
    /* FORM CONTROL*/
    .form-control-borderless {
        border: none;
    }

        .form-control-borderless:hover, .form-control-borderless:active, .form-control-borderless:focus {
            border: none;
            outline: none;
            box-shadow: none;
        }

    /* Nascondi l'icona di cancellazione predefinita */
    #searchInput::-webkit-search-cancel-button {
        display: none;
    }

    .input-wide {
        width: calc(100% - 100px);
    }

    /* CARD */

    /* CSS personalizzato per il carosello */
    #carouselExampleIndicators {
        max-width: 100%; /* Imposta la larghezza massima del carosello */
        margin: 0 auto; /* Centra il carosello orizzontalmente */
    }

    .carousel-item img {
        height: 300px; /* Imposta un'altezza fissa per il carosello */
        width: 100%; /* Imposta la larghezza delle immagini al 100% */
        object-fit: cover; /* Fai sì che le immagini coprano l'intero spazio */
    }

    .carousel-item {
        text-align: center; /* Centra il contenuto delle slide */
    }

    .carousel-caption {
        background-color: rgba(0, 0, 0, 0.5); /* Sfondo traslucido per i testi */
        padding: 10px; /* Aggiunge spazio intorno ai testi */
    }

    .toast {
        background-color: #343a40; /* Colore di sfondo */
        color: #ffffff; /* Colore del testo */
    }


</style>


<main>

    <!-- DESCRIZIONE SITO-->
    <section class="row mt-5" aria-labelledby="aspnetTitle">
        <h1 id="title">ASP.NET</h1>
        <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
        <p><a href="https://asp.net" class="btn btn-primary btn-md">Learn more &raquo;</a></p>
    </section>

    <!-- CAROSELLO-->
    <div id="carouselExampleIndicators mt-5" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="https://images.pexels.com/photos/1054218/pexels-photo-1054218.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" alt="First slide">
                <div class="carousel-caption">
                    <h5>Accessori</h5>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="https://images.pexels.com/photos/417173/pexels-photo-417173.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" alt="Second slide">
                <div class="carousel-caption">
                    <h5>Abbigliamento</h5>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="https://images.pexels.com/photos/691668/pexels-photo-691668.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" alt="Third slide">
                <div class="carousel-caption">
                    <h5>Cibo</h5>
                </div>
            </div>
        </div>
        <!-- COMANDI CAROSELLO -->
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <!-- CARTELLE SEZIONI-->
    <div class="row mt-3">
        <section class="col-lg-4 col-md-12 mb-3">
            <div class="card h-100">
                <div class="card-body">
                    <h2 id="gettingStartedTitle">Abbigliamento</h2>
                    <p>
                        ASP.NET MVC gives you a powerful, patterns-based way to build dynamic websites that
                        enables a clean separation of concerns and gives you full control over markup
                        for enjoyable, agile development.
                    </p>
                </div>
                <div class="card-footer">
                    <a class="btn btn-outline-dark" href="#">Learn more &raquo;</a>
                </div>
            </div>
        </section>
        <section class="col-lg-4 col-md-12 mb-3">
            <div class="card h-100">
                <div class="card-body">
                    <h2 id="librariesTitle">Get more libraries</h2>
                    <p>NuGet is a free Visual Studio extension that makes it easy to add, remove, and update libraries and tools in Visual Studio projects.</p>
                </div>
                <div class="card-footer">
                    <a class="btn btn-outline-dark" href="#">Learn more &raquo;</a>
                </div>
            </div>
        </section>
        <section class="col-lg-4 col-md-12 mb-3">
            <div class="card h-100">
                <div class="card-body">
                    <h2 id="hostingTitle">Web Hosting</h2>
                    <p>You can easily find a web hosting company that offers the right mix of features and price for your applications.</p>
                </div>
                <div class="card-footer">
                    <a class="btn btn-outline-dark" href="#">Learn more &raquo;</a>
                </div>
            </div>
        </section>
    </div>

    <!-- RESEARCH BAR -->
    <div class="container">
        <br />
        <div class="row justify-content-center">
            <div class="col-12 col-md-10 col-lg-8">
                <form class="card card-sm">
                    <div class="card-body row no-gutters align-items-center">
                        <div class="col-auto">
                            <i class="fas fa-search h4 text-body"></i>
                        </div>
                        <!-- INPUT RESEARCH-->
                        <div class="col input-col">
                            <input class="form-control form-control-lg form-control-borderless form-control-lg input-wide" type="search" id="searchInput" placeholder="Search topics or keywords">
                        </div>
                        <!-- BUTTONS -->
                        <div class="col-auto">
                            <button class="btn btn-lg btn-success" type="submit">Search</button>
                        </div>
                        <!--end of col-->
                    </div>
                    <!-- Icona per la cancellazione del testo -->
                    <div class="card-footer">
                        <i class="fas fa-times-circle h4 text-body d-none" id="clearSearchIcon"></i>
                    </div>
                </form>
            </div>
            <!--end of col-->
        </div>
    </div>

    <!-- SEZIONE OUR PRODUCTS-->
    <div class="row mt-5 margin-bt">
        <div class="col-12">
            <div class=" border-1 border-bottom border-dark-subtle">
                <p class="h2 text">Our Products <span class="text-muted">|<small class="h5"> Trends Products</small></span></p>
            </div>
        </div>
    </div>

    <!-- CARD PRODOTTI-->
    <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-4 mt-3">
        @foreach (var item in Model.HomeViewModel.ListOfProducts)
        {
            <div class="col">
                <!-- CARD SECTION-->
                <div class="card h-100">
                    <!-- Product image-->
                    <img class="card-img-top" src="@Url.Content("~/Uploads/" + item.ProductImage)" alt="@item.Altdescription" />
                    @if (item.IsFeatured == true)
                    {
                        <span class="badge badge-secondary bg-warning" style="position: absolute; top: 1rem; left: 1rem;">new</span>
                    }
                    <!-- Product details-->
                    <div class="card-body p-4">
                        <div class="text-center">
                            <!-- Product name-->
                            <h5 class="fw-bolder">@item.ProductName</h5>
                            @if (item.Quantity > 0)
                            {
                                <!--AVAILABLE-->
                                <p class="card-text text-success">Available</p>
                                <!-- PRODUCT ACTION---------------------------------------------->
                                <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                    <div class="d-flex justify-content-center">
                                        <!--CART BUTTON---------------------------------------->
                                        <!--aggiungi al carrello-->
                                        <button class="btn btn-outline-dark mt-auto mx-2 addToCartButton" data-url="@Url.Action("AddToCart", "Home", new { ProductID = item.ProductID })"
                                                data-message-logged-in="Prodotto aggiunto al carrello con successo!"
                                                data-message-logged-out="Per aggiungere al carrello, effettua il login">
                                            <i class="fas fa-shopping-cart"></i>
                                            Carrello
                                        </button>

                                        <!--Dettagli prodotto-->
                                        <div class="d-flex justify-content-center">
                                            <a class="btn btn-outline-dark mt-auto" href="#">
                                                <i class="fas fa-search"></i> Dettagli
                                            </a>
                                        </div>

                                    </div>
                                </div>
                            }
                            else
                            {
                                <p class="card-text text-warning">Not Available</p>
                                <p>@item.Price.$</p>
                                <!-- PRODUCT ACTION---------------------------------------------->
                                <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                    <div class="d-flex justify-content-center">
                                        <a class="btn btn-outline-dark mt-auto" href="#">
                                            <i class="fas fa-search"></i> Dettagli
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    

    <!-- Toast Container -->
    <div class="toast" role="alert" aria-live="assertive" aria-atomic="true" style="position: absolute; top: 0; right: 0;">
        <div class="toast-header">
            <strong class="me-auto">Messaggio</strong>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body">
            Il tuo messaggio qui.
        </div>
    </div>











</main>


